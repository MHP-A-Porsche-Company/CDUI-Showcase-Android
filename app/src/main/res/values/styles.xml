<resources>

    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:fontFamily">@font/montserrat_thin</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>

    </style>

    <style name="TextMedium" >
        <item name="android:fontFamily">@font/monserrat</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextSubHeadline" parent="AppTheme">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="H1" parent="AppTheme">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="H2" parent="AppTheme">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="H3" parent="AppTheme">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="H5" parent="AppTheme">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="BOLD" parent="AppTheme">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
